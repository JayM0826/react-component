{
  "name": "daifee-react-component",
  "version": "1.0.0",
  "description": "封装常用的 react 组件，参考（copy） weui 的 UI 风格",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/daifee/react-component.git"
  },
  "scripts": {
    "start": "webpack-dev-server --hot --inline --progress --colors --port 8082  --config ./webpack.config.dev.js",
    "test": "mocha --require ./test/setup.js --compilers js:babel-core/register --recursive",
    "lint": "eslint src/",
    "lint:watch": "esw -w src/",
    "esdoc": "esdoc -c esdoc.json",
    "build": "npm run clear && npm run build:development && npm run build:production",
    "build:production": "NODE_ENV=production webpack -p --progress --colors",
    "build:development": "NODE_ENV=development webpack --progress --colors",
    "clear": "rm -rf ./dist"
  },
  "keywords": [
    "daifee-react-component",
    "react-component",
    "react",
    "component",
    "ui"
  ],
  "author": "daifee",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "esdoc": "^0.4.7",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-config-standard-react": "^2.4.0",
    "eslint-plugin-promise": "^1.3.1",
    "eslint-plugin-react": "^5.1.1",
    "eslint-plugin-standard": "^1.3.2",
    "eslint-watch": "^2.1.11",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.17.0",
    "jsdom": "^9.2.1",
    "mocha": "^2.5.3",
    "node-sass": "^3.7.0",
    "open-browser-webpack-plugin": "0.0.2",
    "postcss-loader": "^0.9.1",
    "react": "^15.1.0",
    "react-addons-css-transition-group": "^15.1.0",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-router": "^2.4.1",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
